begin
  require "rcloadenv"
rescue LoadError
  # If the gem is not installed, attempt to use the library from local source
  # (i.e. for local testing).
  path = File.dirname ::File.dirname __FILE__
  path = File.join path, "lib"
  $:.unshift path
  require "rcloadenv"
end

cli = RCLoadEnv::CLI.new $0, ARGV
cli.run
